#!/usr/bin/env bash

cd /vagrant

FILES="$(find * -regex '^resources/.*\.md' | grep "$1" | tr '\n' ' ' | xargs)"

if [[ "$FILES" = *.md ]]; then
    if [[ "$FILES" = *.worksheet.md ]]; then
        make -j 10 $(echo "$FILES" | sed 's/\.md$/.answers.pdf/g')
    else
        make -j 10 $(echo "$FILES" | sed 's/\.md$/.handout.pdf/g')
    fi
else
    make all
fi
